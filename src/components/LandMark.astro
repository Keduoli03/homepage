---
import Timeline from "./util/Timeline.astro";
interface TimelineItem {
    date?: string;
    period?: string;
    title: string;
    subtitle?: string;
    description?: string;
    points?: string[];
    icon?: string;
    link?: string;
}
const { items = [] } = Astro.props as { items: TimelineItem[] };

---
<div class="flex flex-col gap-4">
    <h4 class="text-xl font-bold mb-2">我的历程</h4>

<Timeline items={items} scrollable={true} maxHeight="22.1rem" />
</div>


